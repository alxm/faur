from faur.tool.tool import Tool

g_tool = Tool('File.c/.h ...', '--include-c --include-h')

def main():
    inc_file = g_tool.args.get('File.c/.h')
    files = g_tool.args.get('...')

    if g_tool.args.get_flag('--include-c'):
        g_tool.files.write_text(inc_file,
"""\
//
// Generated by `{}`
//
#include <faur.v.h>

//
// Arduino only builds C files from the root dir
//
#if F_CONFIG_SYSTEM_ARDUINO
{}
#endif
""".format(g_tool.get_cmd(),
           '\n'.join([f'#include "{f}"' for f in files])))
    elif g_tool.args.get_flag('--include-h'):
        g_tool.files.write_text(inc_file,
"""\
//
// Generated by `{}`
//
#ifndef F_INC_FAUR_GEN_H
#define F_INC_FAUR_GEN_H
{}
#endif // F_INC_FAUR_GEN_H
""".format(g_tool.get_cmd(),
           '\n'.join([f'#include "{f}"' for f in files])))

if __name__ == '__main__':
    main()
