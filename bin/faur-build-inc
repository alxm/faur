from faur.tool.tool import FTool

g_tool = FTool('gen-file [files...]')

def main():
    inc_file = g_tool.args.get('gen-file')
    files = g_tool.args.get('files')

    if inc_file.endswith('.c'):
        g_tool.files.write_text(inc_file,
"""\
//
// Generated by:
// {cmd}
//
#include <faur.v.h>

#if F_CONFIG_SYSTEM_ARDUINO
//
// arduino-builder workaround: for apps, only the source files from the
// root source directory are built, so include nested generated files here.
//
{includes}
#endif
""".format(cmd = g_tool.get_cmd(),
           includes = '\n'.join([f'#include "{f}"' for f in files])))
    elif inc_file.endswith('.h'):
        g_tool.files.write_text(inc_file,
"""\
//
// Generated by:
// {cmd}
//
#ifndef F_INC_FAUR_GEN_H
#define F_INC_FAUR_GEN_H
{includes}
#endif // F_INC_FAUR_GEN_H
""".format(cmd = g_tool.get_cmd(),
           includes = '\n'.join([f'#include "{f}"' for f in files])))
    else:
        g_tool.usage('Gen file must be a .c or .h file')

if __name__ == '__main__':
    main()
