import os

from faur.tool.tool import Tool

g_tool = Tool('bin-file gen-file original-path var-prefix')

def main():
    bin_file = g_tool.args.get('bin-file')
    h_file = g_tool.args.get('gen-file')
    original_path = g_tool.args.get('original-path')
    cvar_prefix = g_tool.args.get('var-prefix')

    if os.path.isdir(bin_file):
        content = process_dir(bin_file, cvar_prefix, original_path)
    elif os.path.isfile(bin_file):
        content = process_file(bin_file, cvar_prefix, original_path)
    else:
        g_tool.out.error(f'{bin_file} is an invalid file')

    g_tool.files.write_text(h_file, content)

def process_dir(BinFile, CVarPrefix, OriginalPath):
    entries = g_tool.files.list_dir(BinFile)

    content = """\
//
// Generated by:
// {cmd}
//

static const char* {prefix}{var}__entries[{size}] = {{
{data}
}};

static const FEmbeddedDir {prefix}{var} = {{
    "{path}",
    {size},
    {prefix}{var}__entries,
}};
""".format(cmd = g_tool.get_cmd(),
           prefix = CVarPrefix,
           var = g_tool.sanitize_c_var(OriginalPath),
           path = OriginalPath,
           size = len(entries),
           data = '\n'.join([f'    "{f}",' for f in entries]))

    return content

def process_file(BinFile, CVarPrefix, OriginalPath):
    bin_bytes = g_tool.files.read_bytes(BinFile)

    content = """\
//
// Generated by:
// {cmd}
//

static const uint8_t {prefix}{var}__buffer[{size}] F__ATTRIBUTE_ALIGN(F_BLOB__BUFFER_ALIGN_MAX) = {{{data}}};

static const FEmbeddedFile {prefix}{var} = {{
    "{path}",
    {size},
    {prefix}{var}__buffer,
}};
""".format(cmd = g_tool.get_cmd(),
           prefix = CVarPrefix,
           var = g_tool.sanitize_c_var(OriginalPath),
           path = OriginalPath,
           size = len(bin_bytes),
           data = ','.join(['0x{:0>2x}'.format(b) for b in bin_bytes]))

    return content

if __name__ == '__main__':
    main()
