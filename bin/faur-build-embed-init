import os

from faur.tool.tool import Tool

g_tool = Tool('File.c GenDir CVarPrefix ...')

def main():
    c_file = g_tool.args.get('File.c')
    gen_dir = g_tool.args.get('GenDir')
    cvar_prefix = g_tool.args.get('CVarPrefix')
    h_files = g_tool.args.get('...')

    includes = []
    dirs = []
    files = []

    if os.path.isdir(gen_dir):
        for h in h_files:
            includes.append(f'#include "embed/{h}"')

            no_h = h[: -2]

            if os.path.isdir(f'{gen_dir}/{no_h}'):
                dirs.append(g_tool.sanitize_c_var(no_h))
            else:
                files.append(g_tool.sanitize_c_var(no_h))

    if len(includes) > 0:
        includes.insert(0, '\n')

    g_tool.files.write_text(c_file,
"""\
//
// Generated by:
// {cmd}
//
#include <faur.v.h>{includes}

const FEmbeddedDir* f__embed_dirs[] = {{{dirs}
    NULL
}};

const FEmbeddedFile* f__embed_files[] = {{{files}
    NULL
}};
""".format(cmd = g_tool.get_cmd(),
           includes = '\n'.join(includes),
           dirs = ''.join([f'\n    &{cvar_prefix}{d},' for d in dirs]),
           files = ''.join([f'\n    &{cvar_prefix}{f},' for f in files])))

if __name__ == '__main__':
    main()
