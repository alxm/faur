import re

from faur.tool.tool import FTool

g_tool = FTool('gen-file [com...] [sys...]')

def main():
    gen_file = g_tool.args.get('gen-file')
    components = g_tool.args.get('com')
    systems = g_tool.args.get('sys')

    if gen_file.endswith('.h'):
        content = """\
//
// Generated by:
// {cmd}
//

{components}

{systems}
""".format(cmd = g_tool.get_cmd(),
           components =
            '\n'.join([f'extern const FComponent {c};' for c in components]),
           systems =
            '\n'.join([f'extern const FSystem {s};' for s in systems]))
    elif gen_file.endswith('.c'):
        content = """\
//
// Generated by:
// {cmd}
//
#include <faur.v.h>

#include "g_ecs_init.h"

const unsigned f_component__num = {components_num};

const FComponent* const f_component__array[] = {{{components}
    NULL
}};

const unsigned f_system__num = {systems_num};

const FSystem* const f_system__array[] = {{{systems}
    NULL
}};
""".format(cmd = g_tool.get_cmd(),
           components = ''.join([f'\n    &{c},' for c in components]),
           components_num = len(components),
           systems = ''.join([f'\n    &{s},' for s in systems]),
           systems_num = len(systems))
    else:
        g_tool.usage('Gen file must be a .c or .h file')

    g_tool.files.write_text(gen_file, content)

if __name__ == '__main__':
    main()
